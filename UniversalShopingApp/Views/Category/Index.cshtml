@model IEnumerable<UniversalShopingClasses.GeneralProductManagement.ProductType>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Index</h2>
<p>
    @Html.ActionLink("Add New", "AddProductType")
</p>
<table class="table table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Delete", "DeleteProductType", new { id = item.Id }) |
                @Html.ActionLink("OSVersion", "ProductCategories", new { id = item.Id })
            </td>
        </tr>
    }
</table>
