@model UniversalShopingClasses.MobileManagement.Mobile
@{
    ViewBag.Title = "CreateMobile";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    //AlertMessage msg = (AlertMessage)TempData["Message"];
}
<style type="text/css">


















    .mytabpane {
        padding: 10px;
        border-left: solid 3px #e4e4e4;
        border-right: solid 3px #e4e4e4;
        border-bottom: solid 3px #e4e4e4;
    }
</style>
@using (Html.BeginForm("CreateMobile", "Mobile", FormMethod.Post, new { id = "prodForm", enctype = "multipart/form-data" }))
{
    <ul class="nav nav-tabs deep-purple">
        <li class="nav-item">
            <a class="nav-link" href="#generalTab" data-toggle="tab">
                <span class="fa fa-audio-description"></span>&nbsp;General
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#specificTab" data-toggle="tab">
                <span class="fa fa-image"></span>&nbsp;Specifications
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#descriptionlTab" data-toggle="tab">
                <span class="fa fa-audio-description"></span>&nbsp;Description
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#imagesTab" data-toggle="tab">
                <span class="fa fa-image"></span>&nbsp;Images
            </a>
        </li>
    </ul>
    <div class="tab-content">
        <div id="generalTab" class="mytabpane tab-pane active mytab">
            <div class="md-form">
                <i class="fa fa-product-hunt prefix"></i>
                @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })
                @Html.LabelFor(m => m.Name)
            </div>
            <div class="md-form">
                <i class="fa fa-dollar prefix"></i>
                @Html.TextBoxFor(m => m.Price, null, new { @class = "form-control" })
                @Html.LabelFor(m => m.Price)
            </div>
            <div class="md-form">
                <i class="fa fa-calendar prefix"></i>
                @Html.TextBoxFor(m => m.ReleaseDate, null, new { @class = "form-control", type = "date" })
            </div>
            <div class="form-group">
                @foreach (var b in (IEnumerable<SelectListItem>)ViewBag.Brands)
                {
                    <label>
                        @Html.RadioButton("brand", b.Value)@b.Text
                    </label>
                }
            </div>
            <div class="form-group">
                <label>@Html.CheckBox("wifi", "wifi") Wifi</label>
                <label>@Html.CheckBox("bluetooth", "bluetooth") BlueTooth</label>
                <label>@Html.CheckBox("3g", "3g") 3G</label>
                <label>@Html.CheckBox("4g", "4g") 4G</label>
            </div>
        </div>
        <div id="specificTab" class="row mytabpane tab-pane mytab">
            <div class="row">
                <div class="col-lg-6">
                    <div class="md-form">
                        <i class="fa fa-mobile fa-lg prefix"></i>
                        @Html.TextBoxFor(m => m.Color, new { @class = "form-control", placeholder = "Mobile Color " })
                        @Html.LabelFor(m => m.Color)
                    </div>
                    <div class="md-form">
                        <i class="fa fa-calendar fa-lg prefix" aria-hidden="true"></i>
                        @Html.TextBoxFor(m => m.Warranty, new { @class = "form-control", placeholder = "Mobile Warranty 2/3/2018", type = "date" })
                    </div>
                    <div class="md-form">
                        <i class="fa fa-eye fa-lg prefix" aria-hidden="true"></i>
                        @Html.TextBoxFor(m => m.Features, new { @class = "form-control", placeholder = "Mobile Features" })
                        @Html.LabelFor(m => m.Features)
                    </div>
                    <div class="md-form">
                        <i class="fa fa-random fa-lg prefix" aria-hidden="true"></i>
                        @Html.TextBoxFor(m => m.Ram, new { @class = "form-control", placeholder = "Mobile Ram Size" })
                        @Html.LabelFor(m => m.Ram)
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="md-form">
                        <i class="fa fa-camera-retro fa-lg prefix" aria-hidden="true"></i>
                        @Html.TextBoxFor(m => m.FrontCam, new { @class = "form-control", placeholder = "Front Camra Pixel" })
                        @Html.LabelFor(m => m.FrontCam)
                    </div>
                    <div class="md-form">
                        <i class="fa fa-camera fa-lg prefix" aria-hidden="true"></i>
                        @Html.TextBoxFor(m => m.BackCam, new { @class = "form-control", placeholder = "Front Camra Pixel" })
                        @Html.LabelFor(m => m.BackCam)
                    </div>
                    <div class="md-form">
                        <i class="fa fa-tv fa-lg prefix" aria-hidden="true"></i>
                        @Html.TextBoxFor(m => m.ScreenSize, new { @class = "form-control", placeholder = "Front Camra Pixel" })
                        @Html.LabelFor(m => m.ScreenSize)
                    </div>
                    <div class="md-form">
                        <i class="fa fa-battery-half fa-lg prefix" aria-hidden="true"></i>
                        @Html.TextBoxFor(m => m.Battery, new { @class = "form-control", placeholder = "Front Camra Pixel" })
                        @Html.LabelFor(m => m.Battery)
                    </div>
                </div>
            </div>
            <div class="md-form">
                <i class="fa fa-star fa-lg prefix" aria-hidden="true"></i>
                @Html.TextBoxFor(m => m.Stock, new { @class = "form-control", placeholder = "Front Camra Pixel" })
                @Html.LabelFor(m => m.Stock)
            </div>
            <div class="row">
                <div class="col-lg-12">
                    @Html.TextAreaFor(m => m.Accessories, new { @class = "form-control", rows = "8", @style = "resize: none" })
                </div>
            </div>
        </div>
        <div id="descriptionlTab" class="mytabpane tab-pane mytab">
            @Html.TextArea("description", null, new { rows = "17", @class = "form-control", @style = "resize: none" })
        </div>
        <div id="imagesTab" class="mytabpane tab-pane mytab">
            <input id="image1" name="image1" type="file" />
            <input id="image2" name="image2" type="file" />
            <input id="image3" name="image3" type="file" />
            <input id="image4" name="image4" type="file" />
        </div>
    </div>
    <div style="margin-top: 10px">
        <button type="submit" class="btn btn-primary" id="prodForm"><span class="fa fa-save"></span>&nbsp; Save</button>
        <button type="reset" class="btn btn-default" id="prodForm"><span class="fa fa-times"></span>&nbsp;Cancle</button>
    </div>

}
