
@model IEnumerable<UniversalShopingClasses.AuctionManagement.AuctionSummery>
<div>
    @if (Model != null)
    {
        <div class="row">
            @foreach (var p in Model)
            {
                <div id="proditem" class="col-lg-4 col-md-6 col-sm-12">
                    <div class="img-thumbnail prodsmyitem">
                        @if (p.ImageUrl != null)
                        {
                            <img src="@Url.Content(p.ImageUrl)" alt="@p.Name" style="width: 292px;height: 200px" />
                        }
                        else
                        {
                            <h3>No Image</h3>
                        } <h5 class="float-right mt-2">@p.BidPrice.ToString("c")</h5>
                        <h4>
                            @p.Name
                        </h4>
                        <p>@p.Description </p>
                        <p>
                            <a href="@Url.Action("GetAuctionDetailForCustomer","Auction", new { Id = p.Id})" style="border-radius: 30px;float: left" class="btn btn-primary btn-md">
                                View Details &nbsp;<span class="fa fa-eye"></span>
                            </a>
                        </p>
                        <a href="@Url.Action("Index","AuctionChat", new { Id = p.Id})" style="border-radius: 30px" class="btn btn-success btn-md">Auction &nbsp;<span class="fa fa-envelope"></span></a>
                    </div>
                </div>
            }
        </div>

    }
</div>
