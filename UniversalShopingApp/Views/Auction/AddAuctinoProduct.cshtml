@using UniversalShopingApp.Models
@model UniversalShopingClasses.AuctionManagement.Auction
@{
    ViewBag.Title = "AddAuctinoProduct";
    Layout = "~/Views/Shared/_AuctionLayout.cshtml";
    AlertMessage msg = (AlertMessage)TempData["Message"];
}
<style type="text/css">

    .mytabpane {
        padding: 10px;
        border-left: solid 3px #e4e4e4;
        border-right: solid 3px #e4e4e4;
        border-bottom: solid 3px #e4e4e4;
    }

    .mytab {
        border-left: solid 1px #e4e4e4;
        border-right: solid 1px #e4e4e4;
        border-bottom: solid 1px #e4e4e4;
        padding: 20px;
    }
</style>
@if (msg != null)
{
    <div class="alert alert-dismissible @msg.CSSClass" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong>@msg.Heading!</strong> @msg.Content.
    </div>
}
<h2>AddAuctinoProduct</h2>
<div class="card">
    <div class="card-header deep-purple lighten-1 white-text">Featured</div>
    <div class="card-body">
        <p class="card-text">
            @using (Html.BeginForm("AddAuctinoProduct", "Auction", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <ul class="nav nav-tabs deep-purple">
                    <li class="nav-item">
                        <a class="nav-link active" href="#productpane" data-toggle="tab">
                            <span class="fa fa-product-hunt fa-lg"></span>&nbsp;Product
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#orderpane" data-toggle="tab">
                            <span class="fa fa-info-circle fa-lg"></span>&nbsp;Description
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#summerypane" data-toggle="tab">
                            <span class="fa fa-image"></span>&nbsp;Images
                        </a>
                    </li>
                </ul>
                <div class="tab-content">
                    <div id="productpane" class="tab-pane mytabpane active">
                        <div class="md-form">
                            <i class="fa fa-edit prefix"></i>
                            @Html.TextBoxFor(m => m.Name, null, new { @class = "form-control" })
                            @Html.LabelFor(m => m.Name)
                        </div>
                        <div class="md-form">
                            <i class="fa fa-dollar prefix"></i>
                            @Html.TextBoxFor(m => m.BidPrice, null, new { @class = "form-control", type = "number" })
                            @Html.LabelFor(m => m.BidPrice)
                        </div>
                        <div class="md-form">
                            <i class="fa fa-phone prefix"></i>
                            @Html.TextBoxFor(m => m.Contact, null, new { @class = "form-control", type = "number" })
                            @Html.LabelFor(m => m.Contact)
                        </div>
                        <div class="md-form">
                            <i class="fa fa-map-marker prefix"></i>
                            @Html.TextBoxFor(m => m.FullAddress, null, new { @class = "form-control", type = "text" })
                            @Html.LabelFor(m => m.FullAddress)
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                @Html.DropDownListFor(m => m.AuctionCategory, (IEnumerable<SelectListItem>)ViewBag.Brands, "- Select Category -", new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="md-form">
                            @Html.TextAreaFor(m => m.Specification, new { @class = "form-control", rows = 5, placeholder = "Define Product Spacex" })
                        </div>
                    </div>
                    <div id="orderpane" class="tab-pane mytabpane">
                        @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = 10, placeholder = "Advertisement Details" })
                    </div>
                    <div id="summerypane" class="tab-pane mytabpane">
                        <div></div>
                        <input id="image1" name="image1" type="file" />
                        <input id="image2" name="image2" type="file" />
                        <input id="image3" name="image3" type="file" />
                        <input id="image4" name="image4" type="file" />
                    </div>
                </div>
                <div class="form-group" style="margin:10px 0px;">
                    <button type="submit" class="btn btn-primary" style="border-radius: 30px"> <span class="fa fa-floppy-o"></span>&nbsp; Save</button>
                    <button type="reset" class="btn btn-default" style="border-radius: 30px"> <span class="fa fa-remove"></span>&nbsp; Cancel</button>
                </div>
            }
        </p>
    </div>
</div>
