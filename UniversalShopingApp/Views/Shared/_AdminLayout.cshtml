@using UniversalShopingClasses.UserManagement
@{
    User currentuser = (User)Session[WebUtils.Current_User];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>@ViewBag.Title Universal-Shoping</title>
    <!-- Font Awesome -->
    <link href="~/Content/MDB-Free/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Bootstrap core CSS -->
    <link href="~/Content/MDB-Free/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Material Design Bootstrap -->
    <link href="~/Content/MDB-Free/css/mdb.min.css" rel="stylesheet" />
    <!-- Your custom styles (optional) -->
    <link href="~/Content/MDB-Free/css/style.css" rel="stylesheet" />
</head>
<body>
    <!--Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background: #5D5D5D;">
        <!-- Navbar brand -->
        <a class="navbar-brand" href="@Url.Action("DashBoard","Admin")"><img src="~/Content/LogImg/USS LOGO Final-01-01.png" style="width: 170px;height:40px" /></a>
        <!-- Collapse button -->
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#basicExampleNav" aria-controls="basicExampleNav"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <!-- Collapsible content -->
        <div class="collapse navbar-collapse" id="basicExampleNav">
            <!-- Links -->
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="@Url.Action("DashBoard","Admin")">
                        Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <!-- Dropdown -->
                <li class="nav-item dropdown ">
                    <a class="nav-link dropdown-toggle" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="fa fa-user-o"></span>Admin</a>
                    <div class="dropdown-menu dropdown-primary" aria-labelledby="navbarDropdownMenuLink">
                        <a class="dropdown-item" href="#"><span class="fa fa-user"></span>&nbsp; @currentuser.Fullname</a>
                        <a class="dropdown-item" href="#"><span class="fa fa-heart"></span>&nbsp; @currentuser.Role.Name</a>
                        <a class="dropdown-item" href="@Url.Action("Logout","Users")"><span class="fa fa-sign-out"></span>&nbsp; Logout</a>
                    </div>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("FirstPage","Contact")"> <span class="fa fa-eye"></span>Visit Site</a>
                </li>
            </ul>
            @if (currentuser != null)
            {
                <nav class="navbar-dark">
                    <h4 class="text-white"><span class="fa fa-user-o"></span>&nbsp; Admin&nbsp;:&nbsp;@currentuser.Fullname</h4>
                </nav>
            }
            <!-- Links -->
        </div>
        <!-- Collapsible content -->
    </nav>
    <!--/.Navbar-->
    <div class="row" style="padding: 10px;margin:0px">
        <div class="col-lg-3">
            <div class="list-group">
                <a href="#" class="list-group-item text-white text-center" style="background: #5D5D5D;">
                    Online Shop Menu
                </a>
                <a href="@Url.Action("DashBoard", "Admin")" class="list-group-item"><i class="fa fa-tachometer fa-lg"></i>&nbsp; DashBoard</a>
                <a href="@Url.Action("GetAllUsers", "Admin")" class="list-group-item"><i class="fa fa-users"></i>&nbsp; UserDetails<i class="badge" style="background: #5D5D5D;padding: 3%;margin-left: 50% ">@Html.Action("GetUserCount", "Admin")</i></a>
                <a href="@Url.Action("ProductsinShop", "Drink")" class="list-group-item"><i class="fa fa-glass"></i>&nbsp; Drink Detail <i class="badge" style="background: #5D5D5D;padding: 3%;margin-left: 49% ">@Html.Action("GetDrinkCount", "Admin")</i></a>
                <a href="@Url.Action("Orderby", "Order")" class="list-group-item"><i class="fa fa-shopping-bag"></i>&nbsp; Order Details <i class="badge" style="background: #5D5D5D;padding: 3%;margin-left: 45% ">@Html.Action("GetOrderCount", "Admin")</i></a>
                <a href="@Url.Action("AddProduct", "Drink")" class="list-group-item"><i class="fa fa-plus"></i>&nbsp;Add Product </a>
                <a href="@Url.Action("CreateMobile", "Mobile")" class="list-group-item"><i class="fa fa-plus"></i>&nbsp;Add Mobiles/Laptop's </a>
                <a href="@Url.Action("AddFabrics", "Fabrics")" class="list-group-item"><i class="fa fa-plus"></i>&nbsp;Add Fabrics </a>
                <a href="@Url.Action("Index", "Mobile")" class="list-group-item"><i class="fa fa-mobile fa-lg"></i>&nbsp; Mobiles-in-Shop <i class="badge" style="background: #5D5D5D;padding: 3%;margin-left: 40% ">@Html.Action("GetMobileCount", "Admin")</i></a>
                <a href="@Url.Action("Index", "Fabrics")" class="list-group-item"><i class="fa fa-female fa-lg"></i>&nbsp; Fabrics-in-Shop <i class="badge" style="background: #5D5D5D;padding: 3%;margin-left: 39% ">@Html.Action("GetFabricsCount", "Admin")</i></a>
                <a href="@Url.Action("GetAuctionDetail", "Auction")" class="list-group-item"><i class="fa fa-female fa-lg"></i>&nbsp; Auctions Products <i class="badge" style="background: #5D5D5D;padding: 3%;margin-left: 31% ">@Html.Action("GetAuctionProduct", "Admin")</i></a>
                <a href="@Url.Action("Index", "Category")" class="list-group-item"><i class="fa fa-plus"></i>&nbsp;Add Category </a>
                <a href="@Url.Action("Index", "FeedBack")" class="list-group-item"><i class="fa fa-comments"></i>&nbsp; FeedBacks</a>
            </div>
        </div>
        <div class="col-lg-9">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>
        </div>
    </div>
    <!-- JQuery -->
    <script src="~/Content/MDB-Free/js/jquery-3.3.1.min.js"></script>
    <!-- Bootstrap tooltips -->
    <script src="~/Content/MDB-Free/js/popper.min.js"></script>
    <!-- Bootstrap core JavaScript -->
    <script src="~/Content/MDB-Free/js/bootstrap.min.js"></script>
    <!-- MDB core JavaScript -->
    <script src="~/Content/MDB-Free/js/mdb.min.js"></script>
    @RenderSection("myscript", required: false)
</body>
</html>
